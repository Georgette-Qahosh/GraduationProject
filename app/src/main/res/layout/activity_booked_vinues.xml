<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookedVinues">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/backAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/back_top_bar"
            app:navigationIcon="@drawable/ic_back_24dp"
            app:title="BOOKED VINUES" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="56dp"
        app:boxStrokeWidthFocused="4dp"
        app:boxStrokeWidth="3dp"
        app:boxStrokeColor="black"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/nameee"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/cairo_bold"
            android:text="Ceasar venue"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pricee"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/cairo_bold"
            android:text="The price : 2000NIS"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/datee"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/cairo_bold"
            android:text="The booking date: 11-8-2021"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WRITE REVIEW" />


    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>